//- shared styles for all views
dom-module(id="d4l-theme")
  template
    style(is="custom-style").
      :root {
        --app-color-primary-grey: #616161;
        --app-color-secondary-grey: #9e9e9e;
        --app-color-primary-red: #c62828;
        --app-color-hover-red: #c62828;
        --app-color-secondary-red: #c62828;
        --app-color-primary-orange: #ff9800;
        --app-color-hover-orange: #eb8d01;
        --app-color-secondary-orange: #ffa621;
        --app-color-primary-green: #4caf50;
        --app-color-hover-green: #44a048;
        --app-color-secondary-green: #5eba62;
        --app-color-primary-blue: #1976d2;
        --app-color-hover-blue: #126bc2;
        --app-color-secondary-blue: #277fd7;
        --app-color-primary-purple: #673ab7;
        --app-color-hover-purple: #572ea1;
        --app-color-secondary-purple: #7348c1;

        --default-primary-color: var(--app-color-primary-red);
        --default-background-color: #f5f5f5;
        --accent-color: var(--app-color-secondary-red);
        --primary-color: var(--default-primary-color);

        --text-primary-color: #fff;
        --text-secondary-color: #212121;
        --text-tertiary-color: #616161;

        --text-light-primary-color: #fff;

        --text-dark-primary-color: #757575;
        --text-dark-secondary-color: #9e9e9e;

        --paper-spinner-layer-1-color: var(--app-color-primary-red);
        --paper-spinner-layer-2-color: var(--app-color-primary-green);
        --paper-spinner-layer-3-color: var(--app-color-primary-orange);
        --paper-spinner-layer-4-color: var(--app-color-primary-purple);

        --paper-font-common-base: {
          font-family: 'Raleway', 'Lato', sans-serif;
          -webkit-font-smoothing: antialiased;
        };

        --default-page-padding: 64px 20px 20px;

        --d4l-font-common-base: {
          font-family: 'Raleway', 'Lato', sans-serif;
          -webkit-font-smoothing: antialiased;
          color: var(--text-secondary-color);
        };

        --d4l-font-primary-title: {
          margin: 10px 0;
          font-size: 32px;
          font-weight: 200;
          color: var(--app-primary-color);
        };
        --d4l-font-secondary-title: {
          margin: 10px 0;
          font-size: 16px;
          font-weight: 200;
          color: var(--text-secondary-color);
        };
        --d4l-font-primary-text: {
          margin: 10px 0;
          font-size: 14px;
          font-weight: 400;
        };
        --d4l-font-secondary-text: {
          margin: 10px 0;
          font-size: 13px;
          font-weight: 400;
        };

        --d4l-font-large-primary-text: {
          margin: 0;
          font-size: 24px;
          font-weight: 200;
        };

        --d4l-font-large-card-primary-title: {
          margin: 0;
          font-size: 18px;
          font-weight: 200;
        };
        --d4l-font-large-card-secondary-title: {
          margin: 0;
          font-size: 14px;
          font-weight: 200;
        };
        --d4l-font-large-card-primary-text: {
          margin: 0;
          font-size: 12px;
          font-weight: 200;
        };
        --d4l-font-large-card-secondary-text: {
          margin: 0;
          font-size: 12px;
          font-weight: 200;
        };

        --d4l-font-small-card-primary-title: {
          margin: 0;
          font-size: 16px;
          font-weight: 200;
        };
        --d4l-font-small-card-secondary-title: {
          margin: 0;
          font-size: 14px;
          font-weight: 200;
        };
        --d4l-font-small-card-primary-text: {
          margin: 0;
          font-size: 13px;
          font-weight: 200;
        };
        --d4l-font-small-card-secondary-text: {
          margin: 0;
          font-size: 13px;
          font-weight: 200;
        };

        --d4l-font-popup-primary-title: {
          margin: 3px 0;
          font-size: 18px;
          font-weight: 400;
        };
        --d4l-font-popup-secondary-title: {
          margin: 3px 0;
          font-size: 16px;
          font-weight: 200;
        };
        --d4l-font-popup-primary-text: {
          margin: 3px 0;
          font-size: 14px;
          font-weight: 200;
        };
        --d4l-font-popup-secondary-text: {
          margin: 3px 0;
          font-size: 12px;
          font-weight: 200;
        };

        --d4l-font-drawer-primary-title: {
          margin: 3px 0;
          font-size: 20px;
          font-weight: 200;
        };
        --d4l-font-drawer-secondary-title: {
          margin: 3px 0;
          font-size: 14px;
          font-weight: 200;
        };
        --d4l-font-drawer-primary-text: {
          margin: 3px 0;
          font-size: 16px;
          font-weight: 200;
        };
        --d4l-font-drawer-secondary-text: {
          margin: 3px 0;
          font-size: 11px;
          font-weight: 200;
        };

        --d4l-font-small-button: {
          font-size: 10px;
        };

        --d4l-avatar-large: {
          width: 64px;
          height: 64px;
          border-radius: 50%;
        };

        --d4l-avatar-medium: {
          width: 32px;
          height: 32px;
          border-radius: 50%;
        };

        --d4l-avatar-small: {
          width: 16px;
          height: 16px;
          border-radius: 50%;
        };

        --notifications-dropdown-width: 500px;
        --notifications-dropdown-height: 600px;

        --chat-width: 300px;
        --chat-minimised-height: 40px;
        --chat-maximised-height: 300px;
      }

