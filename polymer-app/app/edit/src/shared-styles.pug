//- shared styles for all views
dom-module(id="shared-styles")
  template
    style.
      h1 {
        @apply --d4l-font-common-base;
        @apply --d4l-font-primary-title;
      }
      h2 {
        @apply --d4l-font-common-base;
        @apply --d4l-font-secondary-title;
      }

      d4l-dashboard-card h1,
      d4l-dashboard-card h2,
      d4l-dashboard-card h3 {
        color: var(--text-light-primary-color);
      }

      paper-fab, ltn-fab-menu {
        position: fixed;
        right: 35px;
        bottom: 35px;
      }
      ltn-fab-menu paper-icon-button {
        background: rgb(198, 40, 40, 0.7);
        color: #FFF;
        border-radius: 50%;
      }

      ltn-fab-menu .fab-item {
        position: relative;
      }
      ltn-fab-menu .fab-item .label {
        position: absolute;
        right: 100%;
        margin-right: 6px;
        line-height: 40px;
      }

      .text-left {
        text-align: left;
      }
      .text-right {
        text-align: right;
      }

      .fullbleed {
        margin: 0;
        min-height: 100vh;
        box-sizing: border-box;
      }

      .share-buttons > paper-button {
        min-width: 190px;
        margin-bottom: 10px;
      }


dom-module(id="shared-card-styles")
  template
    style.
      .card {
        padding: 16px;
        background-color: #fff;
        margin: 0px;
      }
      .card[hero] {
        padding: 0;
      }

      h1 {
        @apply --d4l-font-common-base;
        @apply --d4l-font-small-card-primary-title;
        color: var(--text-dark-primary-color);
        /*margin-bottom:10px;*/
      }
      p,
      .third-line ::slotted(span) {
        @apply --d4l-font-common-base;
        @apply --d4l-font-small-card-primary-text;
        color: var(--text-dark-primary-color);
      }
      p.secondary,
      p[secondary],
      .third-line ::slotted(span.secondary),
      .third-line ::slotted(span[secondary]) {
        @apply --d4l-font-common-base;
        @apply --d4l-font-small-card-secondary-text;
        color: var(--text-dark-secondary-color);
      }

      .footer.tray {
        background: var(--app-color-primary-grey);
        color: var(--text-light-primary-color);
      }
      .footer.tray paper-icon-button {
        color: var(--app-color-secondary-grey);
      }

dom-module(id="shared-layout-styles")
  template
    style.
      .view-container {
        width: 1420px;

        margin-left: var(--default-page-gutter);
        margin-right: var(--default-page-gutter);
      }
      @media (max-width: 1520px) {
        .view-container {
          width: auto;
        }
      }

      .page-sidebar {
        margin-bottom:30px;
      }

      .page-sidebar:not([mobile]) {
        position: fixed;
        width: 28%;
        height: 88%;
      }

      .row-4, .row-3 {
        margin: 10px -10px;
      }
      .row-4 > .item, 
      .row-3 > .item {
        padding: 10px;
        box-sizing: border-box;
      }

      .row-3 > .item {
        flex: 0 1 33.333333%;
      }
      .row-4 > .item {
        flex: 0 1 25%;
      }

      @media (max-width: 768px) {
        .row-4 > .item,
        .row-3 > .item {
          flex-basis: 50%;
        }
      }
      @media (max-width: 576px) {
        .row-4 > .item,
        .row-3 > .item {
          flex-basis: 100%;
        }
      }


dom-module#d4l-dialog-styles
  template
    style(include="d4l-theme")
    style.
      h1 {
        @apply --d4l-font-common-base;
        @apply --d4l-font-popup-primary-title;
        color: var(--default-primary-color);
      }
      h2 {
        @apply --d4l-font-common-base ;
        @apply --d4l-font-popup-secondary-title ;
        color: var(--text-dark-primary-color);
      }
      p {
        @apply --d4l-font-common-base;
        @apply --d4l-font-popup-primary-text;
        color: var(--text-dark-primary-color);
      }
      .dialog-header h2 {
        @apply --d4l-font-common-base;
        @apply --d4l-font-popup-primary-title;
        font-weight: 200 !important;
        color: white;
      }

      *[secondary] {
        font-weight: normal;
        font-size: 0.8em;
        color: var(--text-dark-secondary-color);
      }

      form {
        padding: 0 !important;
      }

      paper-dialog {
        margin: 0;
      }
      paper-item, paper-icon-item {
        cursor: pointer;
      }

      .dialog-header {
        background-color: var(--app-color-primary-grey);
        color: white;
        margin: 0 !important;
        padding: 4px 8px !important;
      }
      .dialog-header h2 {
        color: white;
      }
      paper-icon-button#close {
        width: 28px;
        height: 28px;
      }
      .dialog-body {
        margin: 0 0 20px !important;
        padding: 0 32px !important;
      }
      .dialog-footer {
        margin: 0 0 10px 0 !important;
        padding: 0 16px !important;
      }

      button.no-style {
        -webkit-appearance: none;
        border: 0;
        padding: 0;
        background: transparent;
      }

      paper-button {
        background-color: var(--default-primary-color);
        color: white;
        border-radius: 15px;
        padding: 5px 10px;
      }
      paper-icon-button#delete {
        width: 30px;
        height: 30px;
      }
