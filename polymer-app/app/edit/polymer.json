{
  "entrypoint": "index.html",
  "shell": "src/d4l-app/d4l-app.html",
  "fragments": [
    "src/views/dashboard/d4l-dashboard.html",
    "src/views/issue/d4l-issue.html",
    "src/views/meme/d4l-meme.html",
    "src/views/thunderclap/d4l-thunderclap.html",
    "src/views/topic/d4l-topic.html",
    "src/views/view404/d4l-view404.html"
  ],
  "sources": [
   "src/**/*",
   "images/**/*",
   "videos/**/*",
   "bower.json"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "!bower_components/webcomponentsjs/gulpfile.js",
    "manifest.json",
    "bower_components/sugar/dist/sugar.min.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "name": "prod",
      "preset": "es5-bundled",
      "addServiceWorker": true
    }
  ]
}
