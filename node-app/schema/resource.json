{
  "name": "resource",
  "type": "collection",
  "collection": "resource",
  "extends": [
    "timestamps"
  ],
  "roles": [{
    "name": "public",
    "endpointDisposition": {
      "GET": "allow"
    },
    "dataDisposition": {
      "READ": "allow"
    }
  }],
  "properties": {
    "name": {
      "__type": "string",
      "__required": true,
      "__allowUpdate": true
    },
    "type": {
      "__type": "string",
      "__default": "image",
      "__enum": ["image", "document"],
      "__required": true
    }
  }
}